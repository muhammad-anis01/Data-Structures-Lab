#include <iostream>
#include <conio.h>
#include <iomanip>
using namespace std;

class Node {
public:
    int data;
    Node* next;
    Node* prev;

    Node(int value) {
        this->data = value;
        this->next = nullptr;
        this->prev = nullptr;
    }
};

class DLL {
public:
    Node* head;
    Node* tail;

    DLL() {
        head = nullptr;
        tail = nullptr;
    }

    // Task 1: Destructor to free all nodes
    ~DLL() {
        Node* current = head;
        while (current != nullptr) {
            Node* temp = current;
            current = current->next;
            delete temp;
        }
        head = nullptr;
        tail = nullptr;
        cout << "\nAll nodes deleted successfully (Destructor called)." << endl;
    }

    // Display only data values of the list
    void display() {
        Node* current = head;
        if (current == nullptr) {
            cout << "List is Empty" << endl;
            return;
        }

        while (current != nullptr) {
            cout << current->data << " ";
            current = current->next;
        }
        cout << endl;
    }

    // Detailed display showing node addresses
    void Display() {
        Node* temp = head;
        cout << "\n------------------------------------------------------\n";
        cout << "     Prev Address        |   Data   |     Next Address |   Node Address\n";
        cout << "------------------------------------------------------\n";

        while (temp != nullptr) {
            cout << setw(20) << temp->prev
                << " | " << setw(7) << temp->data
                << " | " << setw(18) << temp->next
                << " | " << setw(20) << temp
                << endl;
            temp = temp->next;
        }
        cout << endl << "Tail: " << tail << endl;
        cout << "------------------------------------------------------\n";
    }

    // Insert a new node at the beginning
    void insertAtBegin(int value) {
        Node* newNode = new Node(value);
        newNode->next = head;

        if (head != nullptr) {
            head->prev = newNode;
        }
        head = newNode;

        if (tail == nullptr) {
            tail = newNode;
        }
    }

    // Task 2: Insert a node at a specific position
    void insertAtPos(int position, int value) {
        if (position <= 0) {
            cout << "Invalid position!" << endl;
            return;
        }

        if (head == nullptr || position == 1) {
            insertAtBegin(value);
            return;
        }

        Node* current = head;
        for (int i = 1; i < position - 1 && current->next != nullptr; i++) {
            current = current->next;
        }

        Node* newNode = new Node(value);
        newNode->next = current->next;
        newNode->prev = current;

        if (current->next != nullptr)
            current->next->prev = newNode;
        else
            tail = newNode; // Update tail if inserting at the end

        current->next = newNode;
    }

    // Task 3: Delete a node from the front
    void deleteFB() {
        if (head == nullptr) {
            cout << "List is Empty" << endl;
            return;
        }

        Node* temp = head;
        head = head->next;
        delete temp;

        if (head != nullptr)
            head->prev = nullptr; // Fix new head's prev pointer
        else
            tail = nullptr; // Reset tail if list becomes empty
    }

    // Task 4: Display only a single node's information
    void DisplayNode(Node* node) {
        if (node == nullptr) {
            cout << "Node is NULL!" << endl;
            return;
        }

        cout << "\n------------------------------------------------------\n";
        cout << "     Prev Address        |   Data   |     Next Address |   Node Address\n";
        cout << "------------------------------------------------------\n";

        cout << setw(20) << node->prev
            << " | " << setw(7) << node->data
            << " | " << setw(18) << node->next
            << " | " << setw(20) << node
            << endl;

        cout << "------------------------------------------------------\n";
    }

    // Search for a node with the given value
    void search(int value) {
        Node* current = head;
        while (current != nullptr) {
            if (current->data == value) {
                cout << "Node found..." << endl;
                DisplayNode(current);
                return;
            }
            current = current->next;
        }
        cout << "Node not found!" << endl;
    }

    // Insert at the end of the list
    void insertAtEnd(int value) {
        if (tail == nullptr) {
            insertAtBegin(value);
        }
        else {
            Node* newNode = new Node(value);
            tail->next = newNode;
            newNode->prev = tail;
            tail = newNode;
        }
    }
};

int main() {
    DLL list;

    // Task 2: Add four elements and try to add a fifth
    list.insertAtEnd(10);
    list.insertAtEnd(20);
    list.insertAtEnd(30);
    list.insertAtEnd(40);
    list.insertAtPos(5, 50); // Adding at the end
    list.Display();

    // Task 3: Delete from the beginning
    cout << "\nDeleting first element..." << endl;
    list.deleteFB();
    list.Display();

    // Task 4: Search and show one node
    cout << "\nSearching for 30..." << endl;
    list.search(30);

    cout << "\nFinal list display:" << endl;
    list.display();

    getch();
    return 0;
}
